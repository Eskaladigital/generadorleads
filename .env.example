# =============================================
# HEALTH4SPAIN - Variables de Entorno
# =============================================
# Copia este archivo a .env.local y rellena los valores

# =============================================
# SUPABASE (Obligatorio)
# =============================================
# URL de tu proyecto Supabase (Settings > API)
NEXT_PUBLIC_SUPABASE_URL=https://tu-proyecto.supabase.co

# Clave pública anon (Settings > API > anon public)
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Clave service_role (Settings > API > service_role)
# ⚠️ SOLO SERVIDOR - NUNCA EXPONER EN FRONTEND
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# =============================================
# ADMINISTRACIÓN (Obligatorio)
# =============================================
# Emails de administradores autorizados (separados por coma)
# Solo estos emails pueden acceder a /administrator
NEXT_PUBLIC_ADMIN_EMAILS=admin@health4spain.com,tu-email@gmail.com

# =============================================
# TINYMCE (Obligatorio para blog)
# =============================================
# API Key de TinyMCE (obtener en https://www.tiny.cloud/)
# Registrarse gratis, crear "Tiny Account" y copiar API key
NEXT_PUBLIC_TINYMCE_API_KEY=tu-api-key-de-tinymce

# =============================================
# OPENAI (Opcional - para generar landings)
# =============================================
# API Key de OpenAI (https://platform.openai.com/api-keys)
# Solo necesaria para ejecutar: npm run generate-landings
OPENAI_API_KEY=sk-...

# =============================================
# WHATSAPP (Opcional)
# =============================================
# Número de WhatsApp Business (sin + ni espacios)
NEXT_PUBLIC_WHATSAPP_NUMBER=34600000000

# =============================================
# ANALYTICS (Opcional)
# =============================================
# Google Analytics 4
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Google Tag Manager
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# =============================================
# EMAIL (Opcional - para notificaciones)
# =============================================
# Resend (https://resend.com)
RESEND_API_KEY=re_xxxxxxxxxx

# Email de destino para notificaciones de leads
NOTIFICATION_EMAIL=leads@health4spain.com

# =============================================
# SITE CONFIG
# =============================================
NEXT_PUBLIC_SITE_URL=https://www.health4spain.com
NEXT_PUBLIC_SITE_NAME=Health4Spain
